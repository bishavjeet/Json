            </intent-filter>
        </activity>
        <activity android:name=".Activity.Register" />
        <activity android:name=".Activity.SplashScreen"></activity>
        <activity android:name=".Activity.Login" />
        <activity android:name=".fragment.ProfileFrag"></activity>
